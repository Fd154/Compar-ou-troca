{
  "version": 2,
  "functions": {
    "api/**/*": {
      "includeFiles": "server/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/debug-cjs",
      "destination": "/api/debug-cjs"
    },
    {
      "source": "/api/auth/register",
      "destination": "/api/auth/register"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
