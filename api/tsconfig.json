{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false
  },
  "include": ["../api/**/*", "../server/src/**/*"]
}